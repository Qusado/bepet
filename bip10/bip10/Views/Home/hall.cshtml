@model IEnumerable<bip10.Models.hall>

<table class="table" id="myTable">
    <tr>
        <th>ID</th>
        <th>Название зала</th>
        <th>Площадь</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td id="id_td">
                @item.id_h
            </td>
            <td id="name_td">

                @item.name_h
            </td>
            <td id="space_td">

                @item.space_h
            </td>
        </tr>
    }
</table>
@section scripts{
    <script>
        $("#myTable tr").click(function ()
        {
            var id_text = $(this).children('#id_td').text();
            var name_text = $(this).children("#name_td").text();
            var space_text = $(this).children("#space_td").text();
            $("#id_e").val(id_text);
            $("#name_e").val(name_text);
            $("#space_e").val(space_text);
        });
    </script>
}
@if (Request.IsAuthenticated)
{
<div class="row">
    <div class="col-xs-6">
        @using (Html.BeginForm("Hall_Add", "Change", FormMethod.Post, new { @class = "mt-3" }))
        {
            <div class="form-group row">
                <label for="name" class="col-sm-3">зал</label>
                <div class="col-sm-6">
                    <input class="" type="text" name="name_add" required id="name_add" value="">
                </div>
            </div>

            <div class="form-group row">
                <label for="name" class="col-sm-3">Площадь</label>
                <div class="col-sm-6">
                    <input class="" type="text" name="space_add" required id="space_add" value="">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <button class="col-sm-2 btn btn-primary">Добавить</button>
            </div>
        }

    </div>
    <div class="col-xs-6">
        @using (Html.BeginForm("Hall", "Change", FormMethod.Post, new { @class = "mt-3" }))
        {
            <div class="form-group row">
                <label for="id" class="col-sm-3">Id</label>
                <div class="col-sm-6">
                    <input class="" readonly="true" readonly="true" type="text" name="id_e" id="id_e" value="" />
                </div>
            </div>

            <div class="form-group row">
                <label for="name" class="col-sm-3">Зал</label>
                <div class="col-sm-6">
                    <input class="" type="text" name="name_e" required id="name_e" value="">
                </div>
            </div>

            <div class="form-group row">
                <label for="name" class="col-sm-3">Площадь</label>
                <div class="col-sm-6">
                    <input class="" type="text" name="space_e" required id="space_e" value="">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <button class="col-sm-2 btn btn-primary" value="Edit">Изменить</button>
            </div>
        }
    </div>
</div>
}